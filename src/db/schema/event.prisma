model Event {
    idEvent String @id @default(cuid())
    title String 
    date DateTime
    description String
    shortDescription String
    direction String
    creatorID String
    free Boolean
    cancelled Boolean @default(false)
    price Float?
    completed Boolean @default(false)
    users   Ticket[]
    participants TicketDetail[]
    user User @relation(fields: [creatorID], references: [idUser])
}